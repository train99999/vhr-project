<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="testTables" targetRuntime="MyBatis3">

        <!-- 配置pojo的序列化 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql:///vhr" userId="root"
                        password="12345">
        </jdbcConnection>
        <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer，为 true时把JDBC DECIMAL 和
            NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- targetProject:生成PO类的位置 -->
        <javaModelGenerator targetPackage="com.quan.vhr.bean"
                            targetProject=".\src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <!-- targetProject:mapper映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="com.quan.vhr.mapper"
                         targetProject=".\src\main\resources">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <!-- targetPackage：mapper接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.quan.vhr.mapper"
                             targetProject=".\src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>
        <!-- 指定数据库表 -->
        <table schema="" tableName="adjustsalary"/>
        <table schema="" tableName="appraise"/>
        <table schema="" tableName="department"/>
        <table schema="" tableName="employee"/>
        <table schema="" tableName="employeeec"/>
        <table schema="" tableName="employeeremove"/>
        <table schema="" tableName="employeetrain"/>
        <table schema="" tableName="empsalary"/>
        <table schema="" tableName="hr"/>
        <table schema="" tableName="hr_role"/>
        <table schema="" tableName="joblevel"/>
        <table schema="" tableName="menu"/>
        <table schema="" tableName="menu_role"/>
        <table schema="" tableName="msgcontent"/>
        <table schema="" tableName="nation"/>
        <table schema="" tableName="oplog"/>
        <table schema="" tableName="politicsstatus"/>
        <table schema="" tableName="position"/>
        <table schema="" tableName="role"/>
        <table schema="" tableName="salary"/>
        <table schema="" tableName="sysmsg"/>
    </context>
</generatorConfiguration>